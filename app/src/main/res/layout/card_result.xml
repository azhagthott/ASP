<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewResult"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:layout_margin="2dp"
    android:clickable="true"
    android:orientation="vertical"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/card_result_text_background">

        <ImageView
            android:transitionName="@string/detail_transition_main_image"
            android:id="@+id/imageViewMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/torres_del_paine" />

        <TextView
            android:id="@+id/textViewAreaName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@color/card_result_text_background"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="Laguna San Rafael"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>